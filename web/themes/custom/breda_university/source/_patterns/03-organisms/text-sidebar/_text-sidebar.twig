<section class="section module--lg-v text-sidebar">
  <div class="container contextual-region">
    {{ title_prefix }}
    {{ title_suffix }}
    <div class="row no-gutters justify-content-between">
      <div class="col-md-7">
        {% include "@molecules/_text-column.twig" %}
      </div>
      <aside class="col-md-4 text-sidebar__aside">
        {{ richtext_sidebar_card }}
      </aside>
    </div>
  </div>
</section>